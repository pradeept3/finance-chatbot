# ============================================================================
# backend/.env - Finance Chatbot Configuration
# ============================================================================

# ============================================================================
# FLASK & SERVER SETTINGS
# ============================================================================
FLASK_ENV=development
PORT=5000
DEBUG=False

# ============================================================================
# CHROMADB SETTINGS
# ============================================================================
CHROMADB_PATH=./chroma_db
DATA_DIR=./data/finance_docs
COLLECTION_NAME=finance_chatbot

# ============================================================================
# FILE UPLOAD SETTINGS
# ============================================================================
UPLOAD_DIR=./uploaded_documents
MAX_UPLOAD_SIZE=50  # MB

# ============================================================================
# GOOGLE API SETTINGS
# ============================================================================
# Get your API key from: https://ai.google.dev/
# Set your key below (keep it private!)
GOOGLE_API_KEY=
GOOGLE_API_MODEL=gemini-2.5-flash

# ============================================================================
# OLLAMA SETTINGS
# ============================================================================
# Ollama must be running: ollama serve
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest
OLLAMA_TIMEOUT=45  # seconds - increase if model is slow

# ============================================================================
# BACKEND URL (for frontend to connect)
# ============================================================================
BACKEND_URL=http://127.0.0.1:5000
