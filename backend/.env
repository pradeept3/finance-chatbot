# .env Template - Backend Configuration
# Copy this to your .env file and fill in your API keys

# ============================================================================
# GOOGLE GEMINI API
# ============================================================================
GOOGLE_API_KEY=
GOOGLE_API_MODEL=gemini-2.5-flash

# ============================================================================
# OPENAI GPT-4o (NEW - Optional but recommended)
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
# Alternative models: gpt-4o, gpt-4-turbo, gpt-4, gpt-3.5-turbo

# ============================================================================
# OLLAMA (Local LLM - Optional)
# ============================================================================
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest
OLLAMA_TIMEOUT=120

# ============================================================================
# BACKEND CONFIGURATION
# ============================================================================
PORT=5000
UPLOAD_DIR=./uploaded_documents
MAX_UPLOAD_SIZE=50

# ============================================================================
# DATABASE
# ============================================================================
CHROMA_DB_PATH=./chroma_db

# ============================================================================
# FRONTEND
# ============================================================================
BACKEND_URL=http://127.0.0.1:5000


# ============================================================================
# DEEPSEEK CONFIGURATION (Optional)
# ============================================================================
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com
